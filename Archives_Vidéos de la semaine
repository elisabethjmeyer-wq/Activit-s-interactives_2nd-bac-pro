                <p>Archives</p>
            </div>
        </div>
        <div class="header-badge" onclick="openModal()">
            üì∫ Toutes les vid√©os (<span id="videoCount">0</span>)
        </div>
    </div>

    <!-- MAIN CONTAINER -->
    <div class="main-container">

        <!-- CURRENT VIDEO -->
        <div class="current-video" id="currentVideoSection">
            <div class="current-video-label">
                <span>‚≠ê</span> Derni√®re vid√©o
            </div>
            <div class="current-video-content" id="currentVideoContent">
                <div class="current-video-icon">üé¨</div>
                <div class="current-video-info">
                    <div class="current-video-title" id="currentTitle"></div>
                    <div class="current-video-date" id="currentDate"></div>
                </div>
                <div class="current-video-arrow">‚Üí</div>
            </div>
        </div>

        <!-- ARCHIVES LIST -->
        <div class="archives-section" id="archivesSection">
            <div class="archives-header">
                üìÖ Les semaines pr√©c√©dentes
            </div>
            <div id="archivesList"></div>
        </div>

    </div>

    <!-- MODAL -->
    <div class="modal-overlay" id="modalOverlay" onclick="closeModal(event)">
        <div class="modal" onclick="event.stopPropagation()">
            <div class="modal-header">
                <h2>üì∫ Toutes les vid√©os</h2>
                <button class="modal-close" onclick="closeModal()">‚úï</button>
            </div>
            <div class="modal-filters">
                <div class="filter-row">
                    <div class="filter-group">
                        <label>Mois :</label>
                        <select id="monthFilter" onchange="filterModalVideos()">
                            <option value="all">Tous les mois</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="modal-results-count" id="modalResultsCount">0 vid√©o(s)</div>
            <div class="modal-body" id="modalBody"></div>
        </div>
    </div>

    <script>
        // ===== CONFIGURATION =====
        // üîß REMPLACE CET ID PAR L'ID DE TON GOOGLE SHEETS
        const GOOGLE_SHEETS_ID = '1imYDD3NPS9_ZqFewDrJcyqQV6fCq2kKL_YUC26hJJow';
        const SHEET_NAME = 'videos'; // Nom de l'onglet

        // ===== DONN√âES =====
        let VIDEOS = [];

        // ===== CHARGEMENT GOOGLE SHEETS =====
        async function loadVideosFromGoogleSheets() {
            try {
                const url = `https://docs.google.com/spreadsheets/d/${GOOGLE_SHEETS_ID}/gviz/tq?tqx=out:json&sheet=${SHEET_NAME}`;
                const response = await fetch(url);
                const text = await response.text();
                
                const jsonString = text.substring(47, text.length - 2);
                const data = JSON.parse(jsonString);
                
                VIDEOS = [];
                const rows = data.table.rows;
                
                for (let i = 0; i < rows.length; i++) {
                    const row = rows[i].c;
                    if (!row[0] || row[0].v === null) continue;
                    
                    const video = {
                        date: row[0]?.v || '',
                        titre: row[1]?.v || '',
                        lien: row[2]?.v || ''
                    };
                    
                    if (video.titre) {
                        VIDEOS.push(video);
                    }
                }
                
                // Trier par date d√©croissante (plus r√©cent en premier)
                VIDEOS.sort((a, b) => new Date(b.date) - new Date(a.date));
                
                console.log(`‚úÖ ${VIDEOS.length} vid√©os charg√©es depuis Google Sheets`);
                return true;
                
            } catch (error) {
                console.error('‚ùå Erreur chargement Google Sheets:', error);
                return false;
            }
        }

        // ===== INIT =====
        async function init() {
            const success = await loadVideosFromGoogleSheets();
            
            if (!success || VIDEOS.length === 0) {
                document.querySelector('.main-container').innerHTML = `
                    <div class="empty-state" style="background: white; border-radius: 16px; padding: 40px;">
                        <div class="icon">‚ö†Ô∏è</div>
                        <p>Impossible de charger les vid√©os.<br>V√©rifie que l'onglet "videos" existe et que le Google Sheets est partag√©.</p>
                    </div>
                `;
                return;
            }
            
            document.getElementById('videoCount').textContent = VIDEOS.length;
            displayCurrentVideo();
            displayArchives();
        }

        // ===== DISPLAY CURRENT VIDEO =====
        function displayCurrentVideo() {
            if (VIDEOS.length === 0) {
                document.getElementById('currentVideoSection').style.display = 'none';
                return;
            }

            const video = VIDEOS[0];
            document.getElementById('currentTitle').textContent = video.titre;
            document.getElementById('currentDate').textContent = formatDate(video.date);
            document.getElementById('currentVideoContent').onclick = () => openVideo(video.lien);
        }

        // ===== DISPLAY ARCHIVES =====
        function displayArchives() {
            const container = document.getElementById('archivesList');
            const section = document.getElementById('archivesSection');
            
            // Prendre les 4 vid√©os suivantes (apr√®s la "Derni√®re vid√©o")
            const recentVideos = VIDEOS.slice(1, 5);
            
            // Si pas d'autres vid√©os, masquer la section
            if (recentVideos.length === 0) {
                section.style.display = 'none';
                return;
            }
            
            section.style.display = 'block';
            container.innerHTML = recentVideos.map(video => `
                <div class="video-item" onclick="openVideo('${video.lien}')">
                    <div class="video-item-icon">üé¨</div>
                    <div class="video-item-info">
                        <div class="video-item-title">${video.titre}</div>
                        <div class="video-item-date">${formatDate(video.date)}</div>
                    </div>
                    <div class="video-item-arrow">‚Üí</div>
                </div>
            `).join('');
        }

        // ===== OPEN VIDEO =====
        function openVideo(lien) {
            if (lien) {
                window.open(lien, '_blank');
            }
        }

        // ===== FORMAT DATE =====
        function formatDate(dateStr) {
            if (!dateStr) return '';
            try {
                const date = new Date(dateStr);
                return date.toLocaleDateString('fr-FR', { 
                    day: 'numeric', 
                    month: 'long', 
                    year: 'numeric' 
                });
            } catch {
                return dateStr;
            }
        }

        // ===== START =====
        init();

        // ===== MODAL FUNCTIONS =====
        function openModal() {
            buildMonthFilter();
            filterModalVideos();
            document.getElementById('modalOverlay').classList.add('visible');
        }

        function closeModal(event) {
            if (!event || event.target === event.currentTarget) {
                document.getElementById('modalOverlay').classList.remove('visible');
            }
        }

        function buildMonthFilter() {
            const select = document.getElementById('monthFilter');
            
            // Extraire les mois uniques
            const months = {};
            VIDEOS.forEach(video => {
                const date = new Date(video.date);
                const key = `${date.getFullYear()}-${String(date.getMonth() + 1).padStart(2, '0')}`;
                const label = date.toLocaleDateString('fr-FR', { month: 'long', year: 'numeric' });
                months[key] = label.charAt(0).toUpperCase() + label.slice(1);
            });

            // Trier par date d√©croissante
            const sortedKeys = Object.keys(months).sort().reverse();

            select.innerHTML = '<option value="all">Tous les mois</option>';
            sortedKeys.forEach(key => {
                const option = document.createElement('option');
                option.value = key;
                option.textContent = months[key];
                select.appendChild(option);
            });
        }

        function filterModalVideos() {
            const monthFilter = document.getElementById('monthFilter').value;
            const container = document.getElementById('modalBody');

            let filtered = VIDEOS;
            
            if (monthFilter !== 'all') {
                filtered = VIDEOS.filter(video => {
                    const date = new Date(video.date);
                    const key = `${date.getFullYear()}-${String(date.getMonth() + 1).padStart(2, '0')}`;
                    return key === monthFilter;
                });
            }

            document.getElementById('modalResultsCount').textContent = 
                filtered.length + ' vid√©o' + (filtered.length > 1 ? 's' : '');

            if (filtered.length === 0) {
                container.innerHTML = `
                    <div class="modal-empty">
                        <div class="icon">üì≠</div>
                        <p>Aucune vid√©o ce mois-ci</p>
                    </div>
                `;
                return;
            }

            container.innerHTML = filtered.map(video => `
                <div class="modal-video-item" onclick="openVideo('${video.lien}'); closeModal();">
                    <div class="modal-video-icon">üé¨</div>
                    <div class="modal-video-info">
                        <div class="modal-video-title">${video.titre}</div>
                        <div class="modal-video-date">${formatDate(video.date)}</div>
                    </div>
                </div>
            `).join('');
        }

        // Fermer avec Escape
        document.addEventListener('keydown', (e) => {
            if (e.key === 'Escape') closeModal();
        });
    </script>

</body>
