    <script>
        // ===== SIDEBAR TOGGLE =====
        const sidebar = document.getElementById('sidebar');
        const menuToggle = document.getElementById('menuToggle');
        const overlay = document.getElementById('overlay');

        function toggleSidebar() {
            const isCollapsed = sidebar.classList.contains('collapsed');
            
            if (isCollapsed) {
                sidebar.classList.remove('collapsed');
                menuToggle.classList.add('active');
                overlay.classList.add('visible');
            } else {
                sidebar.classList.add('collapsed');
                menuToggle.classList.remove('active');
                overlay.classList.remove('visible');
            }
            
            localStorage.setItem('sidebarOpen', !sidebar.classList.contains('collapsed'));
        }

        menuToggle.addEventListener('click', toggleSidebar);
        overlay.addEventListener('click', toggleSidebar);

        if (localStorage.getItem('sidebarOpen') === 'true') {
            sidebar.classList.remove('collapsed');
            menuToggle.classList.add('active');
        }

        // ===== CALENDAR =====
        const groupSelect = document.getElementById('groupSelect');
        const calendarIframe = document.getElementById('calendarIframe');
        const calendarPlaceholder = document.getElementById('calendarPlaceholder');
        const groupBadge = document.getElementById('groupBadge');
        const STORAGE_KEY = 'studentGroup';

        function updateCalendar(calendarId) {
            if (!calendarId) {
                calendarIframe.src = '';
                calendarIframe.classList.remove('visible');
                calendarPlaceholder.classList.remove('hidden');
                groupBadge.classList.remove('visible');
                return;
            }

            const calendarUrl = `https://calendar.google.com/calendar/embed?src=${encodeURIComponent(calendarId)}&ctz=Europe%2FBerlin&mode=MONTH&showTitle=0&showNav=1&showDate=1&showPrint=0&showTabs=1&showCalendars=0&showTz=0&wkst=2`;

            setTimeout(() => {
                calendarIframe.src = calendarUrl;
                calendarIframe.classList.add('visible');
                calendarPlaceholder.classList.add('hidden');
                groupBadge.classList.add('visible');
            }, 150);
        }

        // Charger le groupe sauvegard√©
        const savedGroup = localStorage.getItem(STORAGE_KEY);
        if (savedGroup) {
            groupSelect.value = savedGroup;
            updateCalendar(savedGroup);
        }

        // √âcouter les changements
        groupSelect.addEventListener('change', function() {
            const selectedGroup = this.value;
            
            if (selectedGroup) {
                localStorage.setItem(STORAGE_KEY, selectedGroup);
                updateCalendar(selectedGroup);
            } else {
                localStorage.removeItem(STORAGE_KEY);
                updateCalendar('');
            }
        });
    </script>

